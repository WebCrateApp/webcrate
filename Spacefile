micros:
  - name: client
    src: ./client
    engine: static
    primary: true
    commands: ['npm run build']
    serve: dist

  - name: server
    src: ./server
    path: server
    engine: nodejs16
    commands: ['npm run build']
    include: ['build', 'package.json']
    run: PORT=8080 node build/index.js
